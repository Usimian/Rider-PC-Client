{
    // Basic single site configuration
    "sync-rsync.remote": "user@192.168.1.173:/home/pi/Rider-PC-Client",
    "sync-rsync.local": "${workspaceRoot}/home/mw/Rider-PC-Client",
    "sync-rsync.delete": false,
    "sync-rsync.flags": "avz",
    "sync-rsync.exclude": [
        ".git",
        ".vscode",
        "__pycache__",
        "*.pyc",
        "*.log",
        ".env"
    ],
    "sync-rsync.shell": "ssh",
    "sync-rsync.showProgress": true,
    "sync-rsync.autoShowOutput": true,
    "sync-rsync.notification": true,
    
